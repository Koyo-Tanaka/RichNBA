<%= render partial: "index_header" %>
<div class="search">
  <div class="search_sidebar">
    <%= params[:keyword] %>
  </div>
  <div class="search_result">
    <div class="search_result_head">
      <div class="search_result_head_sort">
        <select name="select-profession" id="select-profession">
          <option value="" disabled>並び替える</option>
          <option value="hacker">人気の高い順</option>
          <option value="gamer">価格の高い</option>
          <option value="developer">価格の低い順</option>
        </select>
      </div>
    </div>
    <div class="search_result_main">
      <% for num in 1...20 do %>
        <%= render partial: "search_item" %>
        <%= render partial: "search_item" %>
      <% end %>
    </div>
  </div>
</div>
