<div class="main_top_right_team_player_right" alt=<%= teamname %>>
  <div class="main_top_right_team_player_right_slider">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        <div class="swiper-slide"><%= image_tag "1#{teamname}",alt:"Swiper01" %></div>
        <div class="swiper-slide"><div id="teamvideo_<%= teamname %>"></div><div id="video_cover"></div></div>
        <div class="swiper-slide"><%= image_tag "3#{teamname}",alt:"Swiper03" %></div>
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
  <div class="main_top_right_team_player_right_item">
    <div id="main_top_right_team_player_right_item<%=teamnumber%>">
      <li></li>
      <% Item.where("team_id = ?",teamnumber).order(click:"DESC").limit(10).each do |item| %>
        <li>
          <div class="main_category_items autoscroll">
            <a href="<%=item.siteurl%>" target="_blank">
              <%= image_tag "#{item.imageurl}" %>
              <div class="main_category_items_cover">
                <div class="main_category_items_cover_item">
                  <div class="main_category_items_cover_item_name"><p><%=item.name%></p></div>
                  <div class="main_category_items_cover_item_check">
                    <div class="main_category_items_cover_item_check_circle">
                      <% if user_signed_in? then %>
                        <% if ItemUser.where(item_id:item.id,user_id:current_user.id).exists? then %>  
                          <i class="fas fa-clipboard-check yet_check"></i>
                        <% else %>
                          <i class="far fa-clipboard not_check"></i>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="main_category_items_cover_bottom"><i class="fas fa-bars"></i></div>
              </div>
            </a>
            <div class="main_category_items_detail">
              <%= "Â¥#{item.price.to_s(:delimited)}" %>
            </div>
          </div>
        </li>
      <% end %>
      <li></li>
    </div>
  </div>
</div>