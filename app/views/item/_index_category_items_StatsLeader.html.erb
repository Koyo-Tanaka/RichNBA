<div class="main_category">
  <div class="main_category_title">人気の商品</div>
  <% Item.all.where("click > ?", 1).each do |item| %>
      <div class="main_category_items">
        <a href="<%=item.siteurl%>" target="_blank"><%= image_tag "#{Itemimage.find_by(item_id:item.id).url}" %></a>
        <div class="main_category_items_detail">
          <%= "¥#{item.price.to_s(:delimited)}" %>
        </div>
      </div>
  <% end %>
</div>